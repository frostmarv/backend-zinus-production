# ===========================================
# DOCKER ENVIRONMENT
# ===========================================
# For Docker deployment with external PostgreSQL

NODE_ENV=production
DB_TYPE=postgres

# External PostgreSQL (replace with your values)
PGHOST=your-postgres-host.com
PGPORT=5432
PGUSER=zinus_user
PGPASSWORD=your_secure_password
PGDATABASE=zinus_production

# Production settings
DB_SYNC=false
DB_LOGGING=false

# CORS - Replace with your domains
ALLOWED_ORIGINS=https://yourdomain.com

# Docker typically uses this port
PORT=5000

LOG_LEVEL=info